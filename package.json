  "engines": {
    "node": "14.16.1"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.ejs src/**/*.html src/**/*.css dist/",
    "start": "npm run clean && npm run tsc && npm run copy-files && node dist/app.js",
    "test": "nyc ./node_modules/.bin/_mocha 'tests/**/*.test.ts'",
    "dev": "nodemon src/app.ts",
    "postinstall": "tsc && mv -i -v src/public dist/ && mv -i -v src/views dist/ && rm -v -rf src",
    "tsc": "tsc",
    "watch-node": "nodemon dist/app.js",
    "watch-ts": "tsc -w",
    "deploy": "git add . && git commit -m Heroku && git push heroku master"
  },
  "author": "Gustavo Navarro",
  "license": "ISC",
