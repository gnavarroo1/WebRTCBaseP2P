    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "helmet": "^4.5.0",
    "jquery": "^3.6.0",
    "socket.io": "^4.0.1",
    "socket.io-client": "^4.0.1",
    "sweetalert2": "^10.16.6",
    "toastr": "^2.1.4",
